@model Reservation
@{
}

<div>
    <form asp-controller="Reservation" asp-action="AddReservation" method="post">
        @if (Model == null)
        {
            <input value="-1" asp-for="ID" type="hidden" />
        }
        else
        {
            <input asp-for="ID" type="hidden" />
        }
        <div class="form-group">
            <label for="DateTime">Date and Time:</label>
            <input asp-for="DateTime" type="datetime-local" />
        </div>
        <div class="form-group">
            <label for="Name">Party Name:</label>
            <input asp-for="Name" placeholder="Name of Party" />
        </div>
        <div class="form-group">
            <label for="Size">Party Size:</label>
            <input asp-for="Size" placeholder="Party Size" />
        </div>
        <div class="form-group">
            <label for="InSmokingSection">Seated in Smoking Section?</label>
            <input asp-for="InSmokingSection" />
        </div>
        <div class="form-group">
            <label for="SpecialInstructions">Special Instructions:</label>
            <textarea asp-for="SpecialInstructions" placeholder="Special Instructions"></textarea>
        </div>
        <div class="form-group">
            <label for="ContactNumber">Contact Number:</label>
            <input asp-for="ContactNumber" placeholder="Contact Number" />
        </div>
        <div class="form-group">
            <label for="CanText">Okay to Text Contact Number?</label>
            <input asp-for="CanText" />
        </div>
        <button type="submit">Submit</button>
    </form>
    <button onclick="location.href='@Url.Action("Index","Reservation")'">Go Back</button>
</div>